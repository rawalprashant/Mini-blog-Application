<h1>Editing comment</h1> 


<% form_for([@post, @comment]) do |f| %>  
		<%= f.error_messages %>  
		
		<p>  <%= f.label :commenter %><br />  
		<%= f.text_field :commenter %>  </p>  
		
		<p>  <%= f.label :body %><br />  <%= f.text_area :body %>  </p>  
		<p>  <%= f.submit "Update" %>  </p> 
<% end %> 
		
<%= link_to 'Back', post_path(@post) %> 